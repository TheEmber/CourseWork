@{
    ViewData["Title"] = "Зареєструватися";
}
@model CourseWork.Models.RegisterModel

<form class="row g-3" asp-action="Login" asp-controller="Account" method="post">
    <div class="col-md-6 offset-md-3">
        <label for="inputEmail4" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail4" placeholder="example@domain.com" asp-for="Email">
    </div>
    <div class="col-md-6 offset-md-3">
        <label for="inputPassword4" class="form-label">Пароль</label>
        <input type="password" class="form-control" id="inputPassword4" asp-for="Password">
    </div>
        <div class="col-12 text-center mt-3">
        <a asp-controller="Home" asp-action="Signup">Не зареєстровані? Зробіть це зараз!</a>
    </div>
    <div class="col-12 text-center mt-3">
        <a asp-controller="Home" asp-action="Signup">Забули пароль?</a>
    </div>
    <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-primary">Увійти</button>
    </div>
</form>

